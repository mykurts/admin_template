<!DOCTYPE html>
<html lang="en">

<head>
    <base href="">
    <meta charset="utf-8" />
    <%= csrf_meta_tags %>

    <%# Page specific meta %>
    <%= yield :meta %>

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />

    <%# Fonts %>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Open+Sans:ital,wght@0,300;0,400;0,600;0,700;0,800;1,300;1,400;1,600;1,700;1,800&display=swap">
    <title>Admin Template</title>
    <meta content="width=device-width, initial-scale=1, shrink-to-fit=no" name="viewport"/>
    <link href="https://keenthemes.com/metronic" rel="canonical"></link>
    <!-- begin::Fonts
    -->
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700" rel="stylesheet">
    <!-- end::Fonts
    -->

    <!-- Stylesheets used in all pages -->
    <%= render "admin/globals/mandatory_css" %>

    <!-- page specific stylesheets -->
    <%= yield :stylesheet %>
    
    <%= favicon_link_tag asset_path('/assets/admin/sidebar/side_bar_logo.png') %>
    
  </head>
  <!-- end::Head
  -->
  <!-- begin::Body
  -->
  <body class="header-fixed header-mobile-fixed subheader-enabled aside-enabled aside-fixed aside-minimize-hoverable page-loading aside-minimize" id="kt_body">
    <%= render "admin/globals/mobile_header" %>
    <div class="d-flex flex-column flex-root">
      <!-- begin::Page
      -->
      <div class="d-flex flex-row flex-column-fluid page">
        <%= render "admin/globals/sidebar" %>
        <!-- begin::Wrapper
        -->
        <div class="d-flex flex-column flex-row-fluid wrapper" id="kt_wrapper">
          <%= render "admin/globals/header" %>
          <!-- begin::Content
          -->
          <div class="content d-flex flex-column flex-column-fluid mt-15" id="kt_content">
            <!--begin::Entry-->
            <div class="d-flex flex-column-fluid">
              <!--begin::Container-->
              <div class="container-fluid">
                <%= yield %>
              </div>
              <!--end::Container-->
            </div>
            <!--end::Entry-->

            <%= yield :second_content %>
            
          </div>
          <!-- end::Content-->
        </div>
        <!-- end::Wrapper
        -->
      </div>
      <!-- end::Page
      -->

      <!-- begin::User Panel-->

      <!-- end::User Panel-->
    </div>
    <!-- end::Main
    -->

    
    <div class="modal-container">
      <%= yield :modals %>
    </div>

    <script>
      
      var HOST_URL = "https://preview.keenthemes.com/metronic/theme/html/tools/preview";

    </script>
    <!-- begin::Global Config(global config for global JS scripts)
    -->
    <script>
      
      var KTAppSettings = { "breakpoints": { "sm": 576, "md": 768, "lg": 992, "xl": 1200, "xxl": 1400 }, "colors": { "theme": { "base": { "white": "#ffffff", "primary": "#3699FF", "secondary": "#E5EAEE", "success": "#1BC5BD", "info": "#8950FC", "warning": "#FFA800", "danger": "#F64E60", "light": "#E4E6EF", "dark": "#181C32" }, "light": { "white": "#ffffff", "primary": "#E1F0FF", "secondary": "#EBEDF3", "success": "#C9F7F5", "info": "#EEE5FF", "warning": "#FFF4DE", "danger": "#FFE2E5", "light": "#F3F6F9", "dark": "#D6D6E0" }, "inverse": { "white": "#ffffff", "primary": "#ffffff", "secondary": "#3F4254", "success": "#ffffff", "info": "#ffffff", "warning": "#ffffff", "danger": "#ffffff", "light": "#464E5F", "dark": "#ffffff" } }, "gray": { "gray-100": "#F3F6F9", "gray-200": "#EBEDF3", "gray-300": "#E4E6EF", "gray-400": "#D1D3E0", "gray-500": "#B5B5C3", "gray-600": "#7E8299", "gray-700": "#5E6278", "gray-800": "#3F4254", "gray-900": "#181C32" } }, "font-family": "Poppins" };

    </script>
    <!-- end::Global Config
    -->

    <%# Global Variables %>
    <script type="text/javascript">
      var SWAL_SUCCESS_ICON = "<%= image_path('swal-success.png') %>";
      var SWAL_ERROR_ICON = "<%= image_path('swal-error.png') %>";
      var SWAL_DENIED_ICON = "<%= image_path('denied.png') %>";
    </script>
    
    <!-- Scripts used in all pages -->
    <%= render "admin/globals/mandatory_js" %>
    <%= javascript_pack_tag 'admin/globals/helpers' %>

    <!-- page specific javascript -->
    <%= yield :javascript %>

  </body>
  <!-- end::Body
  -->
</html>
